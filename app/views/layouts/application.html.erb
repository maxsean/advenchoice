<!DOCTYPE html>
<html>
  <head>
    <title>Advenchoice</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <link href="https://fonts.googleapis.com/css?family=Kaushan+Script|Playball|Prociono|Tangerine" rel="stylesheet">
  </head>

  <body>
    <div class="navbar">
      <% if current_user %>
        <div class="logged-in">
          <p>Welcome <%=current_user.name %><p>      
          <%= link_to "Sign out", signout_path, id: "sign_out", class: "nav-link" %>
        </div>
      <% else %>
        <div class="logged-out">
          <%= link_to "Sign in with Google", "/auth/google_oauth2", id: "sign_in", class: "nav-link" %>
        </div>
      <% end %>
    </div>
    <div>
      <%= yield %>
    </div>
  </body>
</html>
